<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ถ่ายรูป"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="24dp" />

    <!-- Camera Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp">

        <!-- Camera Preview -->
        <androidx.camera.view.PreviewView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Placeholder -->
        <LinearLayout
            android:id="@+id/camera_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/camera_placeholder_background">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="คลิกเปิดกล้องเพื่อถ่ายรูป"
                android:textSize="16sp"
                android:textColor="#666666"
                android:gravity="center" />

        </LinearLayout>

        <!-- Captured Photo -->
        <ImageView
            android:id="@+id/iv_captured_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Camera Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Start Camera Button -->
        <Button
            android:id="@+id/btn_start_camera"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="เปิดกล้อง"
            android:textSize="16sp"
            android:background="@drawable/button_info"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Camera Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/layout_camera_actions">

            <Button
                android:id="@+id/btn_capture_photo"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ถ่ายรูป"
                android:textSize="16sp"
                android:background="@drawable/button_success"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_retake_photo"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ถ่ายใหม่"
                android:textSize="16sp"
                android:background="@drawable/button_warning"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>